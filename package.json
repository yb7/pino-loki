{
  "name": "pino-loki",
  "version": "7.0.1",
  "description": "A transport for pino that sends messages to Loki",
  "keywords": [
    "pino",
    "pino-transport",
    "loki",
    "logging"
  ],
  "homepage": "https://github.com/Julien-R44/pino-loki#readme",
  "bugs": {
    "url": "https://github.com/Julien-R44/pino-loki/issues"
  },
  "packageManager": "pnpm@6.32.9",
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/pino-loki.git"
  },
  "bin": {
    "pino-loki": "dist/cli.cjs"
  },
  "funding": "https://github.com/sponsors/Julien-R44",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "esmo src/index.ts",
    "test": "esmo bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/ni": "^0.14.0",
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.7",
    "@japa/spec-reporter": "^1.1.12",
    "@types/node": "^17.0.25",
    "@types/pump": "^1.1.1",
    "bumpp": "^7.1.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esmo": "^0.14.1",
    "nock": "^13.2.4",
    "pino": "^7.10.0",
    "pino-pretty": "^7.6.1",
    "pnpm": "^6.32.9",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "unbuild": "^0.7.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build",
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "axios": "^0.26.1",
    "commander": "^9.2.0",
    "pino-abstract-transport": "^0.5.0",
    "pump": "^3.0.0"
  }
}
